## -------------------------------------------------------------------------------------------------
## -- Compiler and linker
## -------------------------------------------------------------------------------------------------
CC = g++
CC_FLAGS = --std=c++20 -Wall -Wextra -Werror

LD = g++
LD_FLAGS =


## -------------------------------------------------------------------------------------------------
## -- Generated files
## -------------------------------------------------------------------------------------------------
SRC  = main.cpp

DEP  = $(patsubst %.cpp,../build/dep/%.d,$(SRC))
OBJ  = $(patsubst %.cpp,../build/obj/%.o,$(SRC))
EXEC = ../build/c-log


## -------------------------------------------------------------------------------------------------
## -- Commands + default
## -------------------------------------------------------------------------------------------------
.PHONY : all dirs depend build run clean purge

all : dirs depend build


## -------------------------------------------------------------------------------------------------
## -- Project setup
## -------------------------------------------------------------------------------------------------
dirs :
	mkdir -p ../build/
	mkdir -p ../build/dep/
	mkdir -p ../build/obj/


## -------------------------------------------------------------------------------------------------
## -- Build dependencies
## -------------------------------------------------------------------------------------------------
depend : $(DEP)

../build/dep/%.d : %.cpp
	if [ -d "../build/" ]; then $(CC) -MM -MT ../build/obj/$(patsubst %.cpp,%.o,$<) $^ -o $@; fi

-include $(DEP)


## -------------------------------------------------------------------------------------------------
## -- Link object files into executable
## -------------------------------------------------------------------------------------------------
build : $(OBJ)
	$(LD) $(LD_FLAGS) $(OBJ) -o $(EXEC)


## -------------------------------------------------------------------------------------------------
## -- Compile source files into object files
## -------------------------------------------------------------------------------------------------
../build/obj/%.o : %.cpp
	$(CC) $(CC_FLAGS) -c $< -o $@


## -------------------------------------------------------------------------------------------------
## -- Run executable
## -------------------------------------------------------------------------------------------------
run :
	./$(EXEC)


## -------------------------------------------------------------------------------------------------
## -- Clean up
## -------------------------------------------------------------------------------------------------
clean :
	rm -rf $(DEP)
	rm -rf $(OBJ)
	rm -rf $(EXEC)

purge :
	rm -rf ../build/


